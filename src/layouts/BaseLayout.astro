---
import '#styles/global.css'
import { type Seo } from '#lib/constants'
import Header from '#components/Header.astro'
import Footer from '#components/Footer.astro'
import Head from '#components/Head.astro'

interface Props {
  seo?: Seo
}

const { seo } = Astro.props
---

<html lang="en" class="bg-base-200">
  <Head seo={seo} />
  <body class="min-h-dvh flex flex-col">
    <Header />
    <main class="flex flex-col flex-1 p-10 prose mx-auto max-w-7xl w-full">
      <slot />
    </main>
    <Footer />
    <noscript>
      <img
        src="https://chiffre.io/noscript/LFL8FtCTaC5ToMYY"
        alt="Chiffre.io anonymous visit counting for clients without JavaScript"
        crossorigin="anonymous"
      />
    </noscript>

    <script
      async
      id="chiffre:analytics"
      src="https://chiffre.io/analytics.js"
      data-chiffre-project-id="LFL8FtCTaC5ToMYY"
      data-chiffre-public-key="pk.aSDcsWOHQcw6vZ0lXmTVom4Uoad55fXNub9NconUvSA"
      referrerpolicy="origin"
      crossorigin="anonymous"></script>
  </body>
</html>
